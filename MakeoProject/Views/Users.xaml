<UserControl x:Class="MakeoProject.Views.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MakeoProject.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label  Grid.Column="1" Grid.Row="1">Clients</Label>
        <Button Grid.Column="1" Grid.Row="2" Click="AddButton_Click">Ajouter</Button>
        <Button Grid.Column="1" Grid.Row="3" Click="RemoveButton_Click">supprimer</Button>
        <DataGrid x:Name="dgCustomer" Grid.Column="1" Grid.Row="5" Grid.RowSpan="2" AutoGenerateColumns="False" ItemsSource="{Binding alluser}" SelectedItem="{Binding SelectedUser}" CanUserReorderColumns="False" CanUserResizeColumns="False" />
    </Grid>
</UserControl>
